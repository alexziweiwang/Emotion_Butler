<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phonejournal"
    android:orientation="vertical"
    tools:context="com.empatica.sample.MoodJournalAdd">

    <LinearLayout
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/sosButton3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/button" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/midLayout"
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/checkPrev"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Check History Mood" />

        <TextView
            android:id="@+id/cmTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/moodInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/extTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/extInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/situTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/situTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/situInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/mtTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mtTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/thoughtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/timingTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/timingTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/nameTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nameTip"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/nameinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/recordBut"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Record" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/back" />
    </LinearLayout>

</LinearLayout>
